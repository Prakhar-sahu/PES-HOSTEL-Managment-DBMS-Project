<!DOCTYPE html>
<html>
<head>
  <title>PES HOSTEL</title>
  <style>
    body {
      background-color: #fff;
      font-family: sans-serif;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 5px;
    }

    th {
      background-color: #eee;
    }

    .add_absentee_button {
      background-color: #00f;
      color: #fff;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
    }

    .add_absentee_form {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .add_absentee_form input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .add_absentee_form button {
      background-color: #00f;
      color: #fff;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Attendance</h1>
  <table>
    <thead>
      <tr>
        <th>Reg No.</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      {{#results}}
        <tr>
          <td>{{reg_no}}</td>
          <td>{{date}}</td>
        </tr>
      {{/results}}
    </tbody>
  </table>
  <button class="add_absentee_button" onclick="addAbsentese()">Add Absentee</button>

  <div class="add_absentee_form">
    <form action="/add_absentee" method="post">
      <input type="text" name="reg_no" placeholder="Reg No.">
      <input type="date" name="date" placeholder="Date">
      <button type="submit">Add</button>
    </form>
  </div>

  <script>
    function addAbsentese() {
      document.querySelector('.add_absentee_form').style.display = 'block';
    }
  </script>
</body>
</html>
