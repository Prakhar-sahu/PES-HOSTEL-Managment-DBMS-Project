<!-- views/result.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Attendance Results</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f0f0f0;
      text-align: center;
      color: #333;
    }

    h1 {
      color: #007BFF;
    }

    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #dee2e6;
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #007BFF;
      color: white;
    }

    td {
      background-color: #f8d7da;
      color: #1c7243;
    }

    p {
      color: #155724;
    }
  </style>
</head>

<body>
  <h1>Attendance Results</h1>
  <% if (results.length > 0) { %>
    <table>
      <tr>
        <th>Course ID</th>
        <th>Total Attendances</th>
      </tr>
      <% results.forEach(result => { %>
        <tr>
          <td><%= result.course_id %></td>
          <td><%= result.total_attendances %></td>
        </tr>
      <% }); %>
    </table>
  <% } else { %>
    <p>No results found.</p>
  <% } %>
</body>

</html>
