<!DOCTYPE html>
<html>
<head>
  <title>PES HOSTEL</title>
  <style>
    body {
      background-color: #f2f2f2;
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
    }
    h1 {
      color: #007BFF;
    }
    p {
      font-size: 18px;
      margin: 20px 0;
    }
    table {
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin: 20px auto;
      padding: 20px;
      width: 80%;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }
    table th {
      background-color: #007BFF;
      color: #fff;
      padding: 10px;
      border: 1px solid #ccc;
    }
    table td {
      padding: 10px;
      border: 1px solid #ccc;
    }
    p.no-results {
      color: #333;
    }
  </style>
</head>
<body>
  <h1>Get Rooms By Status - Result</h1>
  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>
  <% if (results && results.length > 0) { %>
    <h2>Results:</h2>
    <table>
      <tr>
        <th>room_no</th>
        <th>block_id</th>
        <th>status</th>
      </tr>
      <% results.forEach(result => { %>
        <tr>
          <td><%= result.room_no %></td>
          <td><%= result.block_id %></td>
          <td><%= result.status %></td>
        </tr>
      <% }); %>
    </table>
  <% } else if (results && results.length === 0) { %>
    <p class="no-results">No results found.</p>
  <% } %>
</body>
</html>
