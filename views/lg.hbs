<!-- views/lg.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Local Guardians with Matching Address</title>

  <!-- Include your CSS file here -->
  {{!-- <link rel="stylesheet" href="/path/to/your/style.css"> --}}

  <style>
    /* Your additional CSS styles go here */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      color: #333;
      margin: 20px;
    }

    h1 {
      color: #0066cc;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      margin-bottom: 10px;
    }

    strong {
      font-weight: bold;
    }

    p {
      font-style: italic;
    }
  </style>
</head>
<body>
  <h1>Local Guardians with Matching Address</h1>

  {{#if results.length}}
    <ul>
      {{#each results}}
        <li>
          <strong>Student Registration Number:</strong> {{reg_no}}<br>
          <strong>Student Name:</strong> {{stud_name}}<br>
          <strong>Student Address:</strong> {{student_address}}<br>
          <strong>Local Guardian Name:</strong> {{guardian_name}}<br>
          <strong>Local Guardian Address:</strong> {{lg_address}}<br>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No results found.</p>
  {{/if}}
</body>
</html>
