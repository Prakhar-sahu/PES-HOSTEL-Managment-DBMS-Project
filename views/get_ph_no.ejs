<!-- views/getPhoneNumbers.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PES HOSTEL</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        form {
            max-width: 400px;
            margin: auto;
        }
        label {
            display: block;
            margin-bottom: 8px;
        }
        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            width: 100%;
        }
        button:hover {
            background-color: #45a049;
        }
        .result {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Get Phone Numbers by Registration Number</h1>
    <form action="/get-ph-post" method="post">
        <label for="regNo">Registration Number:</label>
        <input type="text" id="regNo" name="regNo" required>
        <button type="submit">Get Phone Numbers</button>
    </form>

    <div class="result">
        <% if (phoneNumbers) { %>
            <h2>Phone Numbers:</h2>
            <ul>
                <% phoneNumbers.forEach(number => { %>
                    <li><%= number %></li>
                <% }); %>
            </ul>
        <% } else if (error) { %>
            <p style="color: red;"><%= error %></p>
        <% } %>
    </div>
</body>
</html>
